<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="style.css">
</head>

<body class="d-flex justify-content-center align-items-center vh-100">
    <div class="container">
        <h2 class="text-center">üìù To-Do List</h2>
        <div class="input-group mb-3">
            <input type="text" id="taskInput" class="form-control" placeholder="Enter a new task...">
            <button class="btn btn-primary" id="addTaskBtn">Add</button>
        </div>
        <div class="task-container">
            <ul id="taskList" class="list-group">
                <% if (tasks.length == 0) { %>
                    <li class="list-group-item text-center">No tasks found</li>
                <% } %>
                <% tasks.slice().reverse().forEach((task) => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <input type="checkbox" class="task-checkbox me-2" data-task-id="<%= task.id %>"
                            <%= task.status === 'completed' ? 'checked' : '' %>>
                            <span id="task-title-<%= task.id %>"><%= task.title %></span>
                        </div>
                        <div>
                            <button class="edit-button btn btn-sm btn-primary me-2" data-task-id="<%= task.id %>">
                                <i class="fa fa-edit"></i>
                            </button>
                            <button class="delete-button btn btn-sm btn-danger" data-task-id="<%= task.id %>">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </button>
                        </div>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
    <script src="/script.js"></script>
</body>
</html>
